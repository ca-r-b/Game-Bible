<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gb_color1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/regLogoIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/my_logo_with_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/loginFieldDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regLogoIv">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/loginUsernameEt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/cstm_et_field_background"
        android:hint="Username"
        android:padding="10dp"
        android:textColor="@color/gb_color1"
        android:fontFamily="@font/mont_regular"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/regPassEt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/cstm_et_field_background"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="@color/gb_color1"
        android:fontFamily="@font/mont_regular"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/regConPassEt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/cstm_et_field_background"
        android:hint="Confirm Password"
        android:padding="10dp"
        android:textColor="@color/gb_color1"
        android:fontFamily="@font/mont_regular"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/regRegBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/cstm_btn_field_background"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/white"
        android:fontFamily="@font/mont_bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>