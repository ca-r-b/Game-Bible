<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gb_color1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/regFieldDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="30dp"
                android:text="SIGN UP"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:fontFamily="@font/oswald_bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/regEmailEt"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/cstm_et_field_background"
                android:hint="Email Address"
                android:padding="10dp"
                android:textColor="@color/gb_color1"
                android:fontFamily="@font/mont_regular"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/regUsernameEt"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/cstm_et_field_background"
                android:hint="Username"
                android:layout_marginTop="25dp"
                android:padding="10dp"
                android:textColor="@color/gb_color1"
                android:fontFamily="@font/mont_regular"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/regPassEt"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/cstm_et_field_background"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/gb_color1"
                android:fontFamily="@font/mont_regular"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/regConPassEt"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/cstm_et_field_background"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/gb_color1"
                android:fontFamily="@font/mont_regular"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/regRegBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/cstm_btn_field_background"
                android:text="CREATE ACCOUNT"
                android:textColor="@color/white"
                android:fontFamily="@font/mont_bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="NOTE: Your username cannot be changed after registering. Also, your username and password must have at least 5 and 8 characters respectively."
                android:textColor="#A4FFFFFF"
                android:fontFamily="@font/mont_regular"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="Already have an account yet? Login now!"
                android:textColor="#A4FFFFFF"
                android:fontFamily="@font/mont_regular"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/regLoginBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/cstm_btn_other_background"
                android:text="LOGIN NOW"
                android:textColor="@color/white"
                android:fontFamily="@font/mont_bold"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>