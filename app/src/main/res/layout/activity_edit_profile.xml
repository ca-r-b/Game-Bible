<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gb_color1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/editProfileImgTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Profile Picture"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/oswald_regular"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/editProfileImgIv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="3dp"
            android:elevation="10dp"
            android:src="@drawable/sample_1"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editProfileImgBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/cstm_btn_field_background"
            android:fontFamily="@font/mont_bold"
            android:text="UPLOAD IMAGE"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#4AFFFFFF"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/editBioTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_regular"
            android:text="Edit Biography"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editBioEt"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:fontFamily="@font/mont_regular"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean aliquet accumsan massa, non vestibulum lectus vestibulum ut. Curabitur orci urna, vehicula ut ornare a, dapibus quis eros. Integer lorem urna, varius et ex a, vehicula posuere sem. Duis vulputate sapien quis diam ultricies semper. In hac habitasse platea dictumst. Morbi tortor sapien, congue id consectetur ac, faucibus at lectus. Duis elementum porta nisl sit amet porttitor. Integer tincidunt nulla justo, in dignissim lorem hendrerit rhoncus. Nunc pretium porttitor enim, id tincidunt ante ornare ut. Vivamus a massa elit. Cras enim ipsum, pellentesque non eleifend at, volutpat non dui. Suspendisse eu metus non nulla auctor posuere a efficitur dui. Praesent id est id arcu convallis aliquet quis eget neque. Quisque urna nisi, tempus a elit euismod, maximus tristique dui. Integer quis commodo turpis, vitae finibus nisi. Phasellus nibh nisl, porta vel fermentum at, laoreet at dui."
            android:textColor="#DFDFDF"
            android:textSize="15sp"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#4AFFFFFF"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editSaveBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/cstm_btn_field_background"
            android:fontFamily="@font/mont_bold"
            android:text="Save Changes"
            android:textColor="@color/white"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>