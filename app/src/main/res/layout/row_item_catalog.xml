<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/cstm_home_row_background">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/homePicIv"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/sample_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/homeTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:text="Kingdom Hearts 3"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/oswald_bold"
            app:layout_constraintStart_toEndOf="@+id/homePicIv"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/homeGenreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Action-Adventure"
            android:textColor="#CACACA"
            android:textSize="15sp"
            android:fontFamily="@font/oswald_regular"
            app:layout_constraintStart_toEndOf="@+id/homePicIv"
            app:layout_constraintTop_toBottomOf="@+id/homeTitleTv" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/homeSaveIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_library_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="#4AFFFFFF"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>